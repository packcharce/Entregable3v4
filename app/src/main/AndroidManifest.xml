<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.entregable3">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:fullBackupContent="@xml/backup_descriptor">
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Usuarios"
            android:label="@string/usuarios_titulo_intent"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".Jugar"
            android:screenOrientation="portrait"
            android:label="@string/cartas_titulo_intent"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".cartitas_showcase.Cartas_Principal"
            android:label="@string/expositor_titulo_intent"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".cartitas_showcase.DetalleCarta"
            android:label="@string/detalles_titulo_intent"
            android:screenOrientation="portrait"
            android:parentActivityName=".cartitas_showcase.Cartas_Principal" >
        </activity>
    </application>

</manifest>