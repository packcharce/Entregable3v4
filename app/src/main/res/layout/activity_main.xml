<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/imageView2"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="17dp"
        android:layout_toEndOf="@+id/imageView"
        android:gravity="center_vertical"
        android:text="@string/menu_user_logeado"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#001AEE" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:text="@string/menu_monedas"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#001AEE" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/tv1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        app:srcCompat="@drawable/indice" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/tv2"
        android:layout_marginStart="50dp"
        android:layout_toEndOf="@+id/tv1"
        app:srcCompat="@drawable/caldero" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/boton_iniciar_sesion"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:onClick="Usuarios"
            android:text="@string/menu_usuario" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:onClick="Jugar"
            android:text="@string/menu_jugar" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:onClick="Cartas"
            android:text="@string/menu_cartas" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:onClick="Salir"
            android:text="@string/menu_salir" />

        <TextView
            android:id="@+id/texto_conectar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="@string/titulo_menu"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>


</RelativeLayout>